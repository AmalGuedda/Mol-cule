<p id="notice"><%= notice %></p>
<div class="container mail-container border">
  <div class="mail-headers row border d-flex p-3">
    <h4> boite mail </h4>
    <button type="button" class="btn btn-dark"><%= link_to "recevoir un email", emails_path, method: "POST", remote: true %></button>
  </div>
  <div class="mail-content row">
    <div class="mail-list">
      <ul>
        <% @emails.each do |email| %>
          <li id="<%= email.id%>" <% if email.read  %> class="font-weight-bold" <% end %> >
            <%= link_to email.object, email_path(email) , remote: true %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="border" id="mail-display">
    </div>
  </div>
</div>